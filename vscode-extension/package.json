{
  "name": "jr-dev-agent",
  "displayName": "Jr Dev Agent",
  "description": "AI-powered junior developer agent that converts Jira tickets into working pull requests",
  "version": "0.1.0",
  "publisher": "jr-dev-team",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "copilot",
    "jira",
    "automation",
    "development"
  ],
  "activationEvents": [
    "onLanguage:*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "jrdev",
        "name": "Jr Dev Agent",
        "description": "AI-powered agent that converts Jira tickets into working code",
        "isSticky": true
      }
    ],
    "commands": [
      {
        "command": "jr-dev.markComplete",
        "title": "Mark Jr Dev Session Complete",
        "category": "Jr Dev"
      },
      {
        "command": "jr-dev.showSessionDetails",
        "title": "Show Jr Dev Session Details",
        "category": "Jr Dev"
      }
    ],
    "configuration": {
      "title": "Jr Dev Agent",
      "properties": {
        "jr-dev.mcpServerUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the MCP Server endpoint"
        },
        "jr-dev.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for MCP Server authentication"
        },
        "jr-dev.devMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable development mode (uses fallback immediately)"
        },
        "jr-dev.timeoutMs": {
          "type": "number",
          "default": 5000,
          "description": "Timeout in milliseconds for MCP Server requests"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "uuid": "^9.0.0"
  }
} 