# üöÄ Jr Dev Agent - Environment Configuration
# ================================================
# Copy this file to .env and fill in your actual values

# üß† LangGraph MCP Server
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
MCP_SERVER_WORKERS=4
MCP_LOG_LEVEL=INFO
MCP_ENVIRONMENT=development

# üìä PESS Scoring System
PESS_DB_HOST=localhost
PESS_DB_PORT=5432
PESS_DB_NAME=pess_db
PESS_DB_USER=pess_user
PESS_DB_PASSWORD=your_pess_password
PESS_SCORING_THRESHOLD=75.0

# üß± PromptBuilder
PROMPTBUILDER_API_URL=http://localhost:8001
PROMPTBUILDER_CONFLUENCE_URL=https://your-company.atlassian.net
PROMPTBUILDER_CONFLUENCE_USER=your-confluence-user
PROMPTBUILDER_CONFLUENCE_TOKEN=your-confluence-token

# üß† Synthetic Memory System
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key  # Optional for local
QDRANT_COLLECTION_NAME=jrdev_memory
QDRANT_VECTOR_SIZE=768

# üîë OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# üìã Jira Integration
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=CEPG
JIRA_MCP_URL=https://mcp.walmart.com/api/jira

# üêô GitHub Integration
GITHUB_TOKEN=your-github-token
GITHUB_COPILOT_API_URL=https://api.github.com/copilot
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=your-repo-name

# üíæ Database Configuration
DATABASE_URL=postgresql://jr_dev_user:your_password@localhost:5432/jr_dev_db
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# üîí Security
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
API_KEY_HEADER=X-API-Key

# üìä Monitoring & Observability
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://localhost:14268/api/traces
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# üåê VS Code Extension
VSCODE_EXTENSION_ID=jr-dev-agent
VSCODE_EXTENSION_PUBLISHER=your-publisher
VSCODE_MARKETPLACE_TOKEN=your-marketplace-token

# üîß Development Mode
DEV_MODE=true
DEBUG=true
ENABLE_JIRA_FALLBACK=true
FALLBACK_TICKET_ID=CEPG-67890

# üöÄ Deployment
DEPLOYMENT_ENV=development
KUBERNETES_NAMESPACE=jr-dev-agent
DOCKER_REGISTRY=your-registry.com
DOCKER_IMAGE_TAG=latest

# üìà Performance Tuning
MAX_CONCURRENT_JOBS=100
WORKER_TIMEOUT=300
MEMORY_LIMIT=2Gi
CPU_LIMIT=1000m

# üß™ Testing
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_jr_dev_db
TEST_REDIS_URL=redis://localhost:6379/1
PYTEST_TIMEOUT=30

# üìß Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#jr-dev-agent-alerts
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@company.com
EMAIL_PASSWORD=your-email-password

# üîÑ Template Intelligence
TEMPLATE_UPDATE_THRESHOLD=5
TEMPLATE_SPLIT_TOKEN_LIMIT=2000
TEMPLATE_SPLIT_REQUIREMENTS_LIMIT=3
CONFLUENCE_TEMPLATE_SPACE=DEV

# üåÄ Session Management
SESSION_TIMEOUT_MINUTES=60
SESSION_CLEANUP_INTERVAL_HOURS=24
MAX_SESSION_EVENTS=1000

# üìä Analytics
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT=https://analytics.company.com
ANALYTICS_API_KEY=your-analytics-api-key

# üîç Feature Flags
FEATURE_SYNTHETIC_MEMORY=true
FEATURE_TEMPLATE_INTELLIGENCE=true
FEATURE_SESSION_MANAGEMENT=true
FEATURE_PESS_SCORING=true
FEATURE_ADVANCED_MONITORING=false

# üö® Alerting
ALERT_WEBHOOK_URL=https://alerts.company.com/webhook
ALERT_SEVERITY_THRESHOLD=ERROR
ALERT_RATE_LIMIT=10

# üîÑ Backup & Recovery
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# üåç Internationalization
DEFAULT_LOCALE=en_US
SUPPORTED_LOCALES=en_US,es_ES,fr_FR

# üì± API Rate Limiting
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
API_RATE_LIMIT_REDIS_KEY=api_rate_limit

# üîß Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."

# üìä Metrics Collection
METRICS_ENABLED=true
METRICS_INTERVAL=60
METRICS_RETENTION_DAYS=90 